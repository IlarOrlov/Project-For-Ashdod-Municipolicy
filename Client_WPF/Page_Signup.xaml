<Page x:Class="Client_WPF.Page_Signup"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Client_WPF"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920"
      Title="Page_Signup">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="Images/subBackground.png"/>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="1.5*"/>
            <RowDefinition Height="0.9*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.6*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1.5*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="0.6*"/>
        </Grid.ColumnDefinitions>

        <!-- TITLE -->
        <TextBlock Text="הרשמה" HorizontalAlignment="Center" VerticalAlignment="Center" 
                   FontSize="120" FontFamily="Ts Matka" FontWeight="Bold" 
                   Grid.Row="1" Grid.Column="2" Grid.ColumnSpan="3"/>

        <!-- FULL NAME -->
        <TextBlock Text="שם מלא" HorizontalAlignment="Center" VerticalAlignment="Center" 
                   FontSize="50" FontFamily="Asakim" FontWeight="Bold" 
                   Grid.Row="3" Grid.Column="5" />

        <TextBox x:Name="fullName" HorizontalAlignment="Center" VerticalAlignment="Center" 
                 VerticalContentAlignment="Center" HorizontalContentAlignment="Center" 
                 FontSize="26" FontFamily="Assistant ExtraBold" Foreground="#FF080864"
                 Height="65" Width="330" Grid.Row="3" Grid.Column="4" BorderBrush="Black" >

            <TextBox.Resources>
                <Style TargetType="Border" >
                    <Setter Property="CornerRadius" Value="30" />
                </Style>
            </TextBox.Resources>
        </TextBox>

        <!-- ID NUMBER -->
        <TextBlock Text="תעודת זהות" HorizontalAlignment="Center" VerticalAlignment="Center" 
                   FontSize="50" FontFamily="Asakim" FontWeight="Bold" 
                   Grid.Row="4" Grid.Column="5" />

        <TextBox x:Name="IDnumber" HorizontalAlignment="Center" VerticalAlignment="Center" 
                 VerticalContentAlignment="Center" HorizontalContentAlignment="Center" 
                 FontSize="26" FontFamily="Assistant ExtraBold" Foreground="#FF080864"
                 Height="65" Width="330" Grid.Row="4" Grid.Column="4" BorderBrush="Black" >

            <TextBox.Resources>
                <Style TargetType="Border" >
                    <Setter Property="CornerRadius" Value="30" />
                </Style>
            </TextBox.Resources>
        </TextBox>

        <!-- PASSWORD -->
        <TextBlock Text="סיסמה" HorizontalAlignment="Center" VerticalAlignment="Center" 
                   FontSize="50" FontFamily="Asakim" FontWeight="Bold" 
                   Grid.Row="5" Grid.Column="5" />

        <TextBox x:Name="passWord" HorizontalAlignment="Center" VerticalAlignment="Center" 
                 VerticalContentAlignment="Center" HorizontalContentAlignment="Center" 
                 FontSize="25" FontFamily="Assistant ExtraBold" Foreground="#FF080864"
                 Height="65" Width="330" Grid.Row="5" Grid.Column="4" BorderBrush="Black" >

            <TextBox.Resources>
                <Style TargetType="Border" >
                    <Setter Property="CornerRadius" Value="30" />
                </Style>
            </TextBox.Resources>
        </TextBox>

        <!-- VERIFY PASSWORD -->
        <TextBlock Text="אימות סיסמה" HorizontalAlignment="Center" VerticalAlignment="Center" 
                   FontSize="50" FontFamily="Asakim" FontWeight="Bold" 
                   Grid.Row="6" Grid.Column="5" />

        <TextBox x:Name="verifyPass" HorizontalAlignment="Center" VerticalAlignment="Center" 
                 VerticalContentAlignment="Center" HorizontalContentAlignment="Center" 
                 FontSize="26" FontFamily="Assistant ExtraBold" Foreground="#FF080864"
                 Height="65" Width="330" Grid.Row="6" Grid.Column="4" BorderBrush="Black" >

            <TextBox.Resources>
                <Style TargetType="Border" >
                    <Setter Property="CornerRadius" Value="30" />
                </Style>
            </TextBox.Resources>
        </TextBox>

        <!-- EMAIL -->
        <TextBlock Text="כתובת מייל" HorizontalAlignment="Center" VerticalAlignment="Center" 
                   FontSize="50" FontFamily="Asakim" FontWeight="Bold" 
                   Grid.Row="7" Grid.Column="5" />

        <TextBox x:Name="email" HorizontalAlignment="Center" VerticalAlignment="Center" 
                 VerticalContentAlignment="Center" HorizontalContentAlignment="Center" 
                 FontSize="26" FontFamily="Assistant ExtraBold" Foreground="#FF080864"
                 Height="65" Width="330" Grid.Row="7" Grid.Column="4" BorderBrush="Black" >

            <TextBox.Resources>
                <Style TargetType="Border" >
                    <Setter Property="CornerRadius" Value="30" />
                </Style>
            </TextBox.Resources>
        </TextBox>
        
        <!-- PHONE NUMBER -->
        <TextBlock Text="מספר טלפון" HorizontalAlignment="Center" VerticalAlignment="Center" 
                   FontSize="50" FontFamily="Asakim" FontWeight="Bold" 
                   Grid.Row="3" Grid.Column="2" />

        <TextBox x:Name="phoneNumber" HorizontalAlignment="Center" VerticalAlignment="Center" 
                 VerticalContentAlignment="Center" HorizontalContentAlignment="Center" 
                 FontSize="26" FontFamily="Assistant ExtraBold" Foreground="#FF080864"
                 Height="65" Width="330" Grid.Row="3" Grid.Column="1" BorderBrush="Black" >

            <TextBox.Resources>
                <Style TargetType="Border" >
                    <Setter Property="CornerRadius" Value="30" />
                </Style>
            </TextBox.Resources>
        </TextBox>

        <!-- GENDER -->
        <Viewbox Height="50" Grid.Row="4" Grid.Column="2">
            <RadioButton x:Name="male" BorderThickness="2" BorderBrush="#FF080864"
                         VerticalContentAlignment="Center" Content="זכר" FontSize="30" FontFamily="Asakim"
                         Checked="male_Checked" />
        </Viewbox>

        <Viewbox Height="50" Grid.Row="4" Grid.Column="1">
            <RadioButton x:Name="female" BorderThickness="2" BorderBrush="#FF0404FF"
                         VerticalContentAlignment="Center" Content="נקבה" FontSize="30" FontFamily="Asakim"
                         Checked="female_Checked" />
        </Viewbox>

        <!-- SCHOOLS -->
        <TextBlock Text="בית ספר" HorizontalAlignment="Center" VerticalAlignment="Center" 
                   FontSize="50" FontFamily="Asakim" FontWeight="Bold" 
                   Grid.Row="5" Grid.Column="2" />

        <ComboBox x:Name="school" Height="65" Width="260" Grid.Row="5" Grid.Column="1"
                  Foreground="#FF080864" FontFamily="Asakim" FontSize="26" FontWeight="Bold" 
                  VerticalContentAlignment="Center" HorizontalContentAlignment="Right" >
            <ComboBoxItem>אופק</ComboBoxItem>
            <ComboBoxItem>אורות</ComboBoxItem>
            <ComboBoxItem>אורט ימי</ComboBoxItem>
            <ComboBoxItem>אחדות</ComboBoxItem>
            <ComboBoxItem>אילנות</ComboBoxItem>
            <ComboBoxItem>אמירים</ComboBoxItem>
            <ComboBoxItem>אנקורי</ComboBoxItem>
            <ComboBoxItem>ארזים</ComboBoxItem>
            <ComboBoxItem>אריאל</ComboBoxItem>
            <ComboBoxItem>אשכול</ComboBoxItem>
            <ComboBoxItem>בית יעקב גור</ComboBoxItem>
            <ComboBoxItem>גאולים</ComboBoxItem>
            <ComboBoxItem>גוונים</ComboBoxItem>
            <ComboBoxItem>דביר</ComboBoxItem>
            <ComboBoxItem>היובל</ComboBoxItem>
            <ComboBoxItem>המגינים</ComboBoxItem>
            <ComboBoxItem>הקריה</ComboBoxItem>
            <ComboBoxItem>הרא"ה</ComboBoxItem>
            <ComboBoxItem>הראל</ComboBoxItem>
            <ComboBoxItem>חב"ד</ComboBoxItem>
            <ComboBoxItem>חופית</ComboBoxItem>
            <ComboBoxItem>חורב</ComboBoxItem>
            <ComboBoxItem>חזון יעקב</ComboBoxItem>
            <ComboBoxItem>חניכי הישיבות</ComboBoxItem>
            <ComboBoxItem>יד שבתאי</ComboBoxItem>
            <ComboBoxItem>יהל"ם</ComboBoxItem>
            <ComboBoxItem>יח"ד</ComboBoxItem>
            <ComboBoxItem>יצחק רבין</ComboBoxItem>
            <ComboBoxItem>ישיבה תיכונית אמי"ת</ComboBoxItem>
            <ComboBoxItem>לב שמחה</ComboBoxItem>
            <ComboBoxItem>מאיר עיני ישראל</ComboBoxItem>
            <ComboBoxItem>מדרשת אמי"ת לבנות</ComboBoxItem>
            <ComboBoxItem>מוסדות עמוד החסד</ComboBoxItem>
            <ComboBoxItem>מוריה</ComboBoxItem>
            <ComboBoxItem>מח"ט</ComboBoxItem>
            <ComboBoxItem>מחזיקי הדת</ComboBoxItem>
            <ComboBoxItem>מירון</ComboBoxItem>
            <ComboBoxItem>מכללה</ComboBoxItem>
            <ComboBoxItem>מע"ר חדש</ComboBoxItem>
            <ComboBoxItem>מעלות</ComboBoxItem>
            <ComboBoxItem>מפתן חרמון</ComboBoxItem>
            <ComboBoxItem>מקיף א</ComboBoxItem>
            <ComboBoxItem>מקיף אמי"ת ב</ComboBoxItem>
            <ComboBoxItem>מקיף אמי"ת י</ComboBoxItem>
            <ComboBoxItem>מקיף ג</ComboBoxItem>
            <ComboBoxItem>מקיף ד</ComboBoxItem>
            <ComboBoxItem>מקיף ה</ComboBoxItem>
            <ComboBoxItem>מקיף ו</ComboBoxItem>
            <ComboBoxItem>מקיף ז</ComboBoxItem>
            <ComboBoxItem>מקיף ח</ComboBoxItem>
            <ComboBoxItem>מקיף ט</ComboBoxItem>
            <ComboBoxItem>מקיף י"א</ComboBoxItem>
            <ComboBoxItem>נאות אסתר בנות</ComboBoxItem>
            <ComboBoxItem>נווה הרצוג</ComboBoxItem>
            <ComboBoxItem>נועם</ComboBoxItem>
            <ComboBoxItem>נוף ים</ComboBoxItem>
            <ComboBoxItem>ניר</ComboBoxItem>
            <ComboBoxItem>עוז והדר</ComboBoxItem>
            <ComboBoxItem>עלומים</ComboBoxItem>
            <ComboBoxItem>עמל טכנולוגי</ComboBoxItem>
            <ComboBoxItem>פרי עץ חיים</ComboBoxItem>
            <ComboBoxItem>צמח א</ComboBoxItem>
            <ComboBoxItem>צפרירים</ComboBoxItem>
            <ComboBoxItem>קשת</ComboBoxItem>
            <ComboBoxItem>קשת ראובן</ComboBoxItem>
            <ComboBoxItem>רימונים</ComboBoxItem>
            <ComboBoxItem>רננים</ComboBoxItem>
            <ComboBoxItem>רעים</ComboBoxItem>
            <ComboBoxItem>רתמים</ComboBoxItem>
            <ComboBoxItem>שז"ר</ComboBoxItem>
            <ComboBoxItem>שח"ר</ComboBoxItem>
            <ComboBoxItem>שחקים</ComboBoxItem>
            <ComboBoxItem>שילה</ComboBoxItem>
            <ComboBoxItem>שירת הים</ComboBoxItem>
            <ComboBoxItem>שערי ציון</ComboBoxItem>
            <ComboBoxItem>שקד</ComboBoxItem>
            <ComboBoxItem>שקמים</ComboBoxItem>
            <ComboBoxItem>ת"ת אורות התורה</ComboBoxItem>
            <ComboBoxItem>ת"ת אור מאיר</ComboBoxItem>
            <ComboBoxItem>ת"ת מורשה</ComboBoxItem>
        </ComboBox>

        <!-- GRADE -->
        <TextBlock Text="שכבה" HorizontalAlignment="Center" VerticalAlignment="Center" 
                   FontSize="50" FontFamily="Asakim" FontWeight="Bold" 
                   Grid.Row="6" Grid.Column="2" />

        <ComboBox x:Name="grade" Height="65" Width="260" Grid.Row="6" Grid.Column="1"
                  Foreground="#FF080864" FontFamily="Asakim" FontSize="26" FontWeight="Bold" 
                  VerticalContentAlignment="Center" HorizontalContentAlignment="Right" >
            <ComboBoxItem>א</ComboBoxItem>
            <ComboBoxItem>ב</ComboBoxItem>
            <ComboBoxItem>ג</ComboBoxItem>
            <ComboBoxItem>ד</ComboBoxItem>
            <ComboBoxItem>ה</ComboBoxItem>
            <ComboBoxItem>ו</ComboBoxItem>
            <ComboBoxItem>ז</ComboBoxItem>
            <ComboBoxItem>ח</ComboBoxItem>
            <ComboBoxItem>ט</ComboBoxItem>
            <ComboBoxItem>י</ComboBoxItem>
            <ComboBoxItem>י"א</ComboBoxItem>
            <ComboBoxItem>י"ב</ComboBoxItem>
        </ComboBox>

        <!-- GRADE'S NUMBER -->
        <TextBlock Text="מספר כיתה" HorizontalAlignment="Center" VerticalAlignment="Center" 
                   FontSize="50" FontFamily="Asakim" FontWeight="Bold" 
                   Grid.Row="7" Grid.Column="2" />

        <ComboBox x:Name="gradeNum" Height="65" Width="260" Grid.Row="7" Grid.Column="1"
                  Foreground="#FF080864" FontFamily="Asakim" FontSize="26" FontWeight="Bold" 
                  VerticalContentAlignment="Center" HorizontalContentAlignment="Right" >
            <ComboBoxItem>1</ComboBoxItem>
            <ComboBoxItem>2</ComboBoxItem>
            <ComboBoxItem>3</ComboBoxItem>
            <ComboBoxItem>4</ComboBoxItem>
            <ComboBoxItem>5</ComboBoxItem>
            <ComboBoxItem>6</ComboBoxItem>
            <ComboBoxItem>7</ComboBoxItem>
            <ComboBoxItem>8</ComboBoxItem>
        </ComboBox>

        <!-- SIGN UP BUTTON -->
        <Button Content="הרשם" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" 
                FontWeight="Bold" FontSize="55" FontFamily="Nehama" Grid.Row="9" Grid.Column="3" Click="Signup_Click"
                Height="100" Width="200" Foreground="White" Background="#FF080864" BorderBrush="White" >

            <Button.Resources >
                <Style TargetType="Border" >
                    <Setter Property="CornerRadius" Value="50" />
                </Style>
            </Button.Resources >
        </Button>

        <!-- RETURN BUTTON -->
        <Button HorizontalContentAlignment="Center" VerticalContentAlignment="Center" 
                FontWeight="Bold" FontSize="55" FontFamily="Nehama" Grid.Row="9" Grid.Column="1" Click="Back_Click"
                Height="70" Width="110" Foreground="White" Background="#FF080864" BorderBrush="White">

            <Button.Resources >
                <Style TargetType="Border" >
                    <Setter Property="CornerRadius" Value="35" />
                </Style>
            </Button.Resources >

            <Button.Content >
                <Image Source="Images/backArrow.png" Height="48" />
            </Button.Content>

        </Button>

    </Grid>
</Page>