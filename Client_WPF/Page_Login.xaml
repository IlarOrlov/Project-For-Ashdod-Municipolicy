<Page x:Class="Client_WPF.Page_Login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:Client_WPF"
      mc:Ignorable="d"
      d:DesignHeight="1080" d:DesignWidth="1920"
      Title="Page_Login">

    <Grid>
        <!-- BACKGROUND -->
        <Grid.Background>
            <ImageBrush ImageSource="Images/subbackground.png" Stretch="UniformToFill"/>
        </Grid.Background>

        <!-- Responsive Scaling -->
        <Viewbox Stretch="Uniform">
            <Grid Width="1920" Height="1080">

                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="1.2*"/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <!-- TITLE -->
                <TextBlock Text="התחברות"
                           HorizontalAlignment="Center" VerticalAlignment="Center"
                           FontSize="120" FontFamily="Ts Matka" FontWeight="Bold"
                           Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2"/>

                <!-- ID NUMBER -->
                <TextBlock Text="תעודת זהות"
                           HorizontalAlignment="Center" VerticalAlignment="Center"
                           FontSize="60" FontFamily="Asakim" FontWeight="Bold"
                           Grid.Row="3" Grid.Column="2"/>

                <TextBox x:Name="IDnumber"
                         HorizontalAlignment="Center" VerticalAlignment="Center"
                         VerticalContentAlignment="Center" HorizontalContentAlignment="Center"
                         FlowDirection="RightToLeft"
                         FontSize="32" FontFamily="Assistant ExtraBold" Foreground="#FF080864"
                         Height="80" Width="500" Grid.Row="3" Grid.Column="1" BorderBrush="Black">
                    <TextBox.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="35"/>
                        </Style>
                    </TextBox.Resources>
                </TextBox>

                <!-- PASSWORD -->
                <TextBlock Text="סיסמה"
                           HorizontalAlignment="Center" VerticalAlignment="Center"
                           FontSize="60" FontFamily="Asakim" FontWeight="Bold"
                           Grid.Row="4" Grid.Column="2"/>

                <PasswordBox x:Name="passWord"
                             FontSize="32" Width="500" Height="80"
                             Grid.Row="4" Grid.Column="1"
                             VerticalContentAlignment="Center" HorizontalContentAlignment="Center"
                             FlowDirection="RightToLeft"
                             Foreground="#FF080864">
                    <PasswordBox.Template>
                        <ControlTemplate TargetType="PasswordBox">
                            <Border BorderBrush="Black"
                                    BorderThickness="1"
                                    Background="White"
                                    CornerRadius="35">
                                <ScrollViewer x:Name="PART_ContentHost"/>
                            </Border>
                        </ControlTemplate>
                    </PasswordBox.Template>
                </PasswordBox>

                <!-- FORGOT PASSWORD BUTTON -->
                <Button Content="שכחתי סיסמה"
                        FontWeight="Bold" FontSize="30" FontFamily="Nehama"
                        Grid.Row="5" Grid.Column="1" Click="ForgotPassword_Click"
                        Height="90" Width="220" Foreground="White" Background="#FF080864"
                        BorderBrush="White" HorizontalAlignment="Left" VerticalAlignment="Center">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="20"/>
                        </Style>
                    </Button.Resources>
                </Button>

                <!-- LOG IN BUTTON -->
                <Button Content="התחבר"
                        FontWeight="Bold" FontSize="30" FontFamily="Nehama"
                        Grid.Row="5" Grid.Column="1" Click="Login_Click"
                        Height="90" Width="220" Foreground="White" Background="#FF080864"
                        BorderBrush="White" HorizontalAlignment="Right" VerticalAlignment="Center">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="20"/>
                        </Style>
                    </Button.Resources>
                </Button>

                <!-- BACK BUTTON -->
                <Button Grid.Row="6" Grid.Column="0"
                        Click="Back_Click"
                        Height="70" Width="110"
                        HorizontalAlignment="Center" VerticalAlignment="Bottom"
                        FontWeight="Bold" FontSize="55" FontFamily="Nehama"
                        Foreground="White" Background="#FF080864" BorderBrush="White">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="35"/>
                        </Style>
                    </Button.Resources>
                    <Button.Content>
                        <Image Source="Images/backArrow.png" Height="48"/>
                    </Button.Content>
                </Button>

            </Grid>
        </Viewbox>
    </Grid>
</Page>