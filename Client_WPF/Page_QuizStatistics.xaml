<Page x:Class="Client_WPF.Page_QuizStatistics"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Client_WPF"
      mc:Ignorable="d"
      d:DesignHeight="1080" d:DesignWidth="1920"
      Title="Page_QuizStatistics"
      FlowDirection="RightToLeft">

    <ScrollViewer>
        <Grid Background="#FFDAE3F3">

            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="3*" />
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.5*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="0.5*"/>
            </Grid.ColumnDefinitions>

            <Rectangle x:Name="rectangle" Fill="#FFB4C8E6" HorizontalAlignment="Center" VerticalAlignment="Top" 
                               Height="260" Width="1400" RadiusX="100" RadiusY="100" 
                               Stroke="{x:Null}" Grid.Column="1" Grid.RowSpan="2"/>

            <!-- BACK BUTTON -->
            <Button HorizontalContentAlignment="Center" VerticalContentAlignment="Center" 
                HorizontalAlignment="Center" VerticalAlignment="Top" Grid.Column="2"
                Grid.Row="0" Click="Back_Click" Height="70" Width="110" 
                Foreground="White" Background="#FF080864" BorderBrush="White">

                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="35" />
                    </Style>
                </Button.Resources>

                <Button.Content>
                    <Image Source="Images/backArrow.png" Height="48" />
                </Button.Content>

            </Button>

            <Button x:Name="ExportExcelButton"
                    Grid.Column="2"
                    Grid.Row="0"
                    Width="200" Height="60"
                    HorizontalAlignment="Left" VerticalAlignment="Center"
                    FontSize="28"
                    FontFamily="Asakim"
                    Click="ExportExcelButton_Click"
                    Background="#FF080864"
                    Foreground="White"
                    BorderBrush="White"
                    Content="ייצא לאקסל" Margin="17,20,0,0" />


            <Grid Grid.Column="1" Grid.Row="0">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <!-- TITLE -->
                <TextBlock Grid.Row="0" Grid.ColumnSpan="2" Text="חשב סטטיסטיקה"
                           HorizontalAlignment="Center" VerticalAlignment="Top" 
                           TextAlignment="Right"
                           FontSize="120" FontFamily="Ts Matka" FontWeight="Bold" />

                <!-- SUB TITLE -->
                <TextBlock Grid.Row="1" Text="נושא השאלון :"
                           HorizontalAlignment="Center" VerticalAlignment="Top"
                           TextAlignment="Right"
                           FontSize="50" FontFamily="Nehama" FontWeight="Bold"
                           Grid.Column="0"/>

                <!-- QUIZ TITLE -->
                <ComboBox Grid.Column="1" Grid.Row="1" x:Name="quizTitles" Height="60" Width="520"
                            Foreground="#FF080864" FontFamily="Asakim" FontSize="26" FontWeight="Bold" 
                            VerticalContentAlignment="Center" HorizontalContentAlignment="Right" 
                            SelectionChanged="quizTitels_SelectionChanged"
                            HorizontalAlignment="Left" VerticalAlignment="Top"/>


            </Grid>

            <!-- FLOW DOCUMENT ( FOR THE RECORDS TABLE & QUIZ STATISTICS TABLE ) -->
            <FlowDocumentReader Grid.Row="1" Grid.Column="1" HorizontalAlignment="Center" HorizontalContentAlignment="Right">
                <FlowDocument x:Name="tablesDocument" ColumnWidth="700" FlowDirection="RightToLeft" TextAlignment="Left">

                </FlowDocument>
            </FlowDocumentReader>

        </Grid>
    </ScrollViewer>
</Page>