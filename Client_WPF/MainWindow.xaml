<Window x:Class="Client_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client_WPF"
        mc:Ignorable="d"
        ResizeMode="CanResize"
        WindowState="Maximized"
        WindowStyle="SingleBorderWindow"
        Title="Ashdod Archives Quiz"
        Icon="Images/icon.png"
        MinHeight="600" MinWidth="800">

    <Grid>
        <!-- BACKGROUND IMAGE -->
        <Grid.Background>
            <ImageBrush ImageSource="Images/background.png" Stretch="UniformToFill"/>
        </Grid.Background>

        <!-- NAVIGATION FRAME - MOVE FIRST and set ZIndex LOW -->
        <Frame x:Name="myFrame"
           NavigationUIVisibility="Hidden"
           Navigated="myFrame_Navigated"
           Background="Transparent"
           Panel.ZIndex="0"/>

        <!-- MAIN VIEWBOX UI - HIGHER ZINDEX -->
        <Viewbox x:Name="IntroUI" Stretch="Uniform" StretchDirection="Both" Panel.ZIndex="1">
            <Grid Width="1920" Height="1080">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- TITLE -->
                <StackPanel Grid.Row="1" VerticalAlignment="Top" Margin="0,50,0,0">
                    <TextBlock Text="חידון ארכיון"
                           HorizontalAlignment="Center"
                           FontSize="110"
                           FontFamily="Ts Matka"
                           FontWeight="Bold"/>
                    <TextBlock Text="אשדוד"
                           HorizontalAlignment="Center"
                           FontSize="80"
                           FontFamily="Ts Matka"
                           FontWeight="Bold"/>
                </StackPanel>

                <!-- START BUTTON -->
                <Button Content="התחל"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                    FontWeight="Bold"
                    FontSize="55"
                    FontFamily="Nehama"
                    Height="100"
                    Width="250"
                    Foreground="White"
                    Background="#FF080864"
                    BorderBrush="White"
                    Click="Register_Click"
                    Margin="0,0,0,100"
                    Grid.Row="2">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="50"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </Grid>
        </Viewbox>
    </Grid>

</Window>