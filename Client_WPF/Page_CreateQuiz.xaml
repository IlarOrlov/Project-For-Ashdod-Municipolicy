<Page x:Class="Client_WPF.Page_CreateQuiz"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Client_WPF"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920"
      Title="Page_CreateQuiz">

    <ScrollViewer>

        <Grid Background="#FFDAE3F3">

            <Grid.ColumnDefinitions>
                <ColumnDefinition  Width="1*"/>
                <ColumnDefinition Width="7*"/>
                <ColumnDefinition  Width="1*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="200"/>
                <RowDefinition />
                <RowDefinition Height="120"/>
            </Grid.RowDefinitions>

            <Rectangle x:Name="rectangle" Fill="#FFB4C8E6" HorizontalAlignment="Center" VerticalAlignment="Top" 
                               Height="780" Width="1350" RadiusX="140" RadiusY="140" 
                               Stroke="{x:Null}" Grid.Row="1" Grid.Column="1" />

            <!-- TITLE -->
            <TextBlock Text="צור שאלון" HorizontalAlignment="Center" VerticalAlignment="Center" 
                            FontSize="120" FontFamily="Ts Matka" FontWeight="Bold"
                            Grid.Row="0" Grid.Column="1" />

            <!-- BACK BUTTON -->
            <Button HorizontalContentAlignment="Center" VerticalContentAlignment="Center" 
                HorizontalAlignment="Center" VerticalAlignment="Center"
                Grid.Row="0" Grid.Column="0" Click="Back_Click"
                Height="80" Width="120" Foreground="White" Background="#FF080864" BorderBrush="White" >

                <Button.Resources >
                    <Style TargetType="Border" >
                        <Setter Property="CornerRadius" Value="35" />
                    </Style>
                </Button.Resources >

                <Button.Content >
                    <Image Source="Images/backArrow.png" Height="48" />
                </Button.Content>

            </Button>

            <!-- FINISH BUTTON -->
            <Button Grid.Row="2" Grid.Column="1" Content="סיום" 
                HorizontalContentAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Top"
                FontWeight="Bold" FontSize="50" FontFamily="Nehama" Click="SubmitQuiz_Click" 
                Height="80" Width="140" Foreground="White" Background="#FF080864" BorderBrush="White" >

                <Button.Resources >
                    <Style TargetType="Border" >
                        <Setter Property="CornerRadius" Value="40" />
                    </Style>
                </Button.Resources >
            </Button>

            <Grid Grid.Row="1" Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="60"/>
                    <RowDefinition Height="120"/>
                    <RowDefinition Height="120"/>
                    <RowDefinition Height="120"/>
                    <RowDefinition Height="120"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="120"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="1.5*"/>
                    <ColumnDefinition Width="100"/>
                </Grid.ColumnDefinitions>

                <!-- QUIZ TITLE -->
                <TextBlock Text=": נושא השאלון" HorizontalAlignment="Left" VerticalAlignment="Center"
                            FontSize="50" FontFamily="Nehama" FontWeight="Bold"
                            Grid.Row="1" Grid.Column="2"/>
                <TextBox x:Name="quizTitle"
                        Grid.Row="1" Grid.Column="1"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Center"
                        HorizontalContentAlignment="Right"
                        VerticalContentAlignment="Center"
                        FlowDirection="RightToLeft"
                        TextWrapping="NoWrap"
                        Padding="15,0"
                        FontSize="26"
                        FontFamily="Assistant ExtraBold"
                        Foreground="#FF080864"
                        Height="60"
                        Width="800"
                        BorderBrush="Black"
                        Text="">
                    <TextBox.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="25"/>
                        </Style>
                    </TextBox.Resources>
                </TextBox>

                <!-- START DATE -->
                <TextBlock Text=": תאריך התחלה" HorizontalAlignment="Left" VerticalAlignment="Center"
                            FontSize="50" FontFamily="Nehama" FontWeight="Bold"
                           Grid.Row="2" Grid.Column="2"/>

                <Viewbox Height="60" HorizontalAlignment="Right" Width="190" Grid.Row="2" Grid.Column="1" >
                    <DatePicker x:Name="startDate" BorderBrush="{x:Null}"/>
                </Viewbox>

                <!-- END DATE -->
                <TextBlock Text=": תאריך סיום" HorizontalAlignment="Left" VerticalAlignment="Center"
                            FontSize="50" FontFamily="Nehama" FontWeight="Bold" 
                           Grid.Row="3" Grid.Column="2"/>

                <Viewbox Height="60" Width="190" Grid.Row="3" Grid.Column="1" HorizontalAlignment="Right" >
                    <DatePicker x:Name="endDate" BorderBrush="{x:Null}"/>
                </Viewbox>

                <!-- QUESTIONS NUMBER -->
                <TextBlock Text=": מספר שאלות" HorizontalAlignment="Left" VerticalAlignment="Center"
                            FontSize="50" FontFamily="Nehama" FontWeight="Bold"
                            Grid.Row="4" Grid.Column="2" />

                <Grid Grid.Row="4" Grid.Column="1">

                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="12*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <Button Content="▲" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" 
                            FontWeight="Bold" FontSize="10" FontFamily="Nehama" Grid.Row="0" Grid.Column="1" 
                            Click="QuestionsUp_Click" Height="20" Width="25" Foreground="White" Background="#FF080864"
                            VerticalAlignment="Bottom">

                        <Button.Resources >
                            <Style TargetType="Border" >
                                <Setter Property="CornerRadius" Value="8" />
                            </Style>
                        </Button.Resources >
                    </Button>

                    <Button Content="▼" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" 
                            FontWeight="Bold" FontSize="10" FontFamily="Nehama" Grid.Row="1" Grid.Column="1"
                            Click="QuestionsDown_Click" Height="20" Width="25" Foreground="White" Background="#FF080864"
                            VerticalAlignment="Top">

                        <Button.Resources >
                            <Style TargetType="Border" >
                                <Setter Property="CornerRadius" Value="8" />
                            </Style>
                        </Button.Resources >
                    </Button>

                    <TextBox x:Name="questionsNumber" HorizontalAlignment="Right" VerticalAlignment="Center" 
                            VerticalContentAlignment="Center" HorizontalContentAlignment="Center" 
                            FontSize="20" FontFamily="Assistant ExtraBold" Foreground="#FF080864"
                            Height="45" Width="55" Grid.RowSpan="2" Grid.Column="0" BorderBrush="Black" Text="0" IsReadOnly="True">

                        <TextBox.Resources>
                            <Style TargetType="Border" >
                                <Setter Property="CornerRadius" Value="18" />
                            </Style>
                        </TextBox.Resources>
                    </TextBox>
                </Grid>
                
                <StackPanel Orientation="Vertical" Grid.Row="5" Grid.Column="1" Grid.ColumnSpan="2" x:Name="newQuestions" VerticalAlignment="Top" >

                </StackPanel>
            </Grid>
        </Grid>
    </ScrollViewer>
</Page>