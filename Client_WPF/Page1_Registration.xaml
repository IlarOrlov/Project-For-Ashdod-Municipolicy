<Page x:Class="Client_WPF.Page1_Registration"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Client_WPF"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920"
      Title="Page1_Registration">

    <Grid>
        <!-- BACKGROUND IMAGE -->
        <Grid.Background>
            <ImageBrush ImageSource="Images/background.png" Stretch="UniformToFill"/>
        </Grid.Background>

        <!-- RESPONSIVE VIEWBOX -->
        <Viewbox Stretch="Uniform">
            <Grid Width="1920" Height="1080">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- LOGIN BUTTON -->
                <Button Grid.Row="1" Grid.Column="1"
                        Height="170" Width="550"
                        Content="התחברות"
                        FontWeight="Bold" FontSize="90" FontFamily="Nehama"
                        HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                        Foreground="White" Background="#FF080864" BorderBrush="White"
                        Click="Login_Click">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="90"/>
                        </Style>
                    </Button.Resources>
                </Button>

                <!-- SIGNUP BUTTON -->
                <Button Grid.Row="2" Grid.Column="1"
                        Height="170" Width="550"
                        Content="הרשמה"
                        FontWeight="Bold" FontSize="90" FontFamily="Nehama"
                        HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
                        Foreground="White" Background="#FF080864" BorderBrush="White"
                        Click="Signup_Click">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="90"/>
                        </Style>
                    </Button.Resources>
                </Button>

            </Grid>
        </Viewbox>
    </Grid>
</Page>