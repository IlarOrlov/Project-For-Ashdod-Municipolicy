<Page x:Class="Client_WPF.Page_ForgotPassword"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Client_WPF"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920"
      Title="Page_ForgotPassword">

    <Grid>

        <Grid.Background>
            <ImageBrush ImageSource="Images/subBackground.png"/>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="0.5*"/>
            <ColumnDefinition Width="0.5*"/>
        </Grid.ColumnDefinitions>

        <!-- TITLE -->
        <TextBlock Text="שכחתי סיסמה" HorizontalAlignment="Center" VerticalAlignment="Center" 
                   FontSize="120" FontFamily="Ts Matka" FontWeight="Bold" 
                   Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3"/>

        <!-- ID NUMBER -->
        <TextBlock Text="תעודת זהות" HorizontalAlignment="Center" VerticalAlignment="Center" 
                   FontSize="60" FontFamily="Asakim" FontWeight="Bold" 
                   Grid.Row="2" Grid.Column="1"/>

        <TextBox x:Name="IDnumber" HorizontalAlignment="Right" VerticalAlignment="Center" 
                 VerticalContentAlignment="Center" HorizontalContentAlignment="Center" 
                 FontSize="32" FontFamily="Assistant ExtraBold" Foreground="#FF080864"
                 Height="80" Width="500" Grid.Row="2" Grid.Column="0" BorderBrush="Black" >

            <TextBox.Resources>
                <Style TargetType="Border" >
                    <Setter Property="CornerRadius" Value="35" />
                </Style>
            </TextBox.Resources>
        </TextBox>

        <!-- NEW PASSWORD -->
        <TextBlock Text="סיסמה חדשה" HorizontalAlignment="Center" VerticalAlignment="Center" 
                   FontSize="60" FontFamily="Asakim" FontWeight="Bold" 
                   Grid.Row="3" Grid.Column="1" />

        <TextBox x:Name="newPassword" HorizontalAlignment="Right" VerticalAlignment="Center" 
                 VerticalContentAlignment="Center" HorizontalContentAlignment="Center" 
                 FontSize="32" FontFamily="Assistant ExtraBold" Foreground="#FF080864"
                 Height="80" Width="500" Grid.Row="3" Grid.Column="0" BorderBrush="Black" >

            <TextBox.Resources>
                <Style TargetType="Border" >
                    <Setter Property="CornerRadius" Value="35" />
                </Style>
            </TextBox.Resources>
        </TextBox>

        <!-- VERIFY NEW PASSWORD -->
        <TextBlock Text="אימות סיסמה חדשה" HorizontalAlignment="Center" VerticalAlignment="Center" 
                   FontSize="50" FontFamily="Asakim" FontWeight="Bold" 
                   Grid.Row="4" Grid.Column="1" />

        <TextBox x:Name="verifyNewPassword" HorizontalAlignment="Right" VerticalAlignment="Center" 
                 VerticalContentAlignment="Center" HorizontalContentAlignment="Center" 
                 FontSize="32" FontFamily="Assistant ExtraBold" Foreground="#FF080864"
                 Height="80" Width="500" Grid.Row="4" Grid.Column="0" BorderBrush="Black" MinLines="2" TextWrapping="Wrap" >

            <TextBox.Resources>
                <Style TargetType="Border" >
                    <Setter Property="CornerRadius" Value="35" />
                </Style>
            </TextBox.Resources>
        </TextBox>

        <!-- CHANGE PASSWORD -->
        <Button Content="שנה סיסמה" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" 
                FontWeight="Bold" FontSize="45" FontFamily="Nehama" Grid.Row="5" Grid.Column="1" Click="ChangePassword_Click"
                Height="100" Width="310" Foreground="White" Background="#FF080864" BorderBrush="White"  >

            <Button.Resources >
                <Style TargetType="Border" >
                    <Setter Property="CornerRadius" Value="50" />
                </Style>
            </Button.Resources >
        </Button>

        <!-- CREATE NEW USER -->
        <Button Content="הרשם מחדש" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" 
                FontWeight="Bold" FontSize="45" FontFamily="Nehama" Grid.Row="5" Grid.Column="0" Click="NewSignup_Click"
                HorizontalAlignment="Right" Height="100" Width="310" Foreground="White" Background="#FF080864" BorderBrush="White" >

            <Button.Resources >
                <Style TargetType="Border" >
                    <Setter Property="CornerRadius" Value="50" />
                </Style>
            </Button.Resources >
        </Button>

        <!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ VERIFICATION CODE MESSAGE ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
        <Rectangle x:Name="rectangle" Fill="#FF96B3DF" HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="Hidden"
                               Height="400" Width="800" RadiusX="100" RadiusY="100" Stroke="Black" StrokeThickness="2" />

        <TextBlock x:Name="codeTitle" Text=": קוד האימות" HorizontalAlignment="Center" VerticalAlignment="Center"
                   FontSize="60" FontFamily="Nehama" FontWeight="Bold" Margin="0,0,0,220" Visibility="Hidden" />

        <TextBox x:Name="digit1" HorizontalAlignment="Center" VerticalAlignment="Center" 
                 VerticalContentAlignment="Center" HorizontalContentAlignment="Center" 
                 FontSize="50" FontFamily="Assistant ExtraBold" Foreground="#FF080864" TextChanged="digit1_Changed"
                 Height="110" Width="110" Margin="0,60,600,0" BorderBrush="Black" Visibility="Hidden" >

            <TextBox.Resources>
                <Style TargetType="Border" >
                    <Setter Property="CornerRadius" Value="45" />
                </Style>
            </TextBox.Resources>
        </TextBox>

        <TextBox x:Name="digit2" HorizontalAlignment="Center" VerticalAlignment="Center" 
                 VerticalContentAlignment="Center" HorizontalContentAlignment="Center" 
                 FontSize="50" FontFamily="Assistant ExtraBold" Foreground="#FF080864" TextChanged="digit2_Changed"
                 Height="110" Width="110" Margin="0,60,360,0" BorderBrush="Black" Visibility="Hidden" >

            <TextBox.Resources>
                <Style TargetType="Border" >
                    <Setter Property="CornerRadius" Value="45" />
                </Style>
            </TextBox.Resources>
        </TextBox>

        <TextBox x:Name="digit3" HorizontalAlignment="Center" VerticalAlignment="Center" 
                 VerticalContentAlignment="Center" HorizontalContentAlignment="Center" 
                 FontSize="50" FontFamily="Assistant ExtraBold" Foreground="#FF080864" TextChanged="digit3_Changed"
                 Height="110" Width="110" Margin="0,60,120,0" BorderBrush="Black" Visibility="Hidden" >

            <TextBox.Resources>
                <Style TargetType="Border" >
                    <Setter Property="CornerRadius" Value="45" />
                </Style>
            </TextBox.Resources>
        </TextBox>

        <TextBox x:Name="digit4" HorizontalAlignment="Center" VerticalAlignment="Center" 
                 VerticalContentAlignment="Center" HorizontalContentAlignment="Center" 
                 FontSize="50" FontFamily="Assistant ExtraBold" Foreground="#FF080864" TextChanged="digit4_Changed"
                 Height="110" Width="110" Margin="120,60,0,0" BorderBrush="Black" Visibility="Hidden" >

            <TextBox.Resources>
                <Style TargetType="Border" >
                    <Setter Property="CornerRadius" Value="45" />
                </Style>
            </TextBox.Resources>
        </TextBox>

        <TextBox x:Name="digit5" HorizontalAlignment="Center" VerticalAlignment="Center" 
                 VerticalContentAlignment="Center" HorizontalContentAlignment="Center" 
                 FontSize="50" FontFamily="Assistant ExtraBold" Foreground="#FF080864" TextChanged="digit5_Changed"
                 Height="110" Width="110" Margin="360,60,0,0" BorderBrush="Black" Visibility="Hidden" >

            <TextBox.Resources>
                <Style TargetType="Border" >
                    <Setter Property="CornerRadius" Value="45" />
                </Style>
            </TextBox.Resources>
        </TextBox>

        <TextBox x:Name="digit6" HorizontalAlignment="Center" VerticalAlignment="Center" 
                 VerticalContentAlignment="Center" HorizontalContentAlignment="Center" 
                 FontSize="50" FontFamily="Assistant ExtraBold" Foreground="#FF080864" TextChanged="digit6_Changed"
                 Height="110" Width="110" Margin="600,60,0,0" BorderBrush="Black" Visibility="Hidden" >

            <TextBox.Resources>
                <Style TargetType="Border" >
                    <Setter Property="CornerRadius" Value="45" />
                </Style>
            </TextBox.Resources>
        </TextBox>

    </Grid>
</Page>